<div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Scraper Exercise</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link scrape" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link deleteAll" href="#">Delete</a>
                </li>
            </ul>
        </div>
    </nav>
    {{#each article}}
    <div class="row text-center justify-content-center">
        <div class="col-md-8 p-2 border rounded bg-dark text-light">
            <h5>{{title}}</h5>
            <a class="article" href=" {{link}} ">click here for the entire article</a>
            <br />
            <button class="note btn-warning btn" data-id="{{_id}}">Add a Note</button>
            <button class="delete btn btn-danger" data-id=" {{_id}}">Delete Article</button>
            <br />
            <br />
            <div id="note" class="col-md-12"> </div>
            <form>
                <div class="form-group {{_id}} d-none">
                    <input class="form-control" placeholder="Title" type="text">
                    <textarea data-id="{{_id}}" class="form-control" id="textform" rows="3"
                        placeholder="Notes"></textarea>
                    <br />
                    <button type="submit" data-id="{{_id}}" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>

    </div>
    {{/each}}
</div>
<script src="./savedarticle.js"></script>
    {{#each article}}
    <div class="row text-center justify-content-center">
        <div class="col-md-8 p-2 border">
            <h5>{{title}}</h5>
            <a href=" {{link}}">click here for the entire article</a>
            <br />
            <button class="save btn-warning btn" data-id="{{_id}}">Save Article</button>
        </div>
    </div>
    {{/each}}
</div>
